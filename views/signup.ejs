<!DOCTYPE html>
<html lang="en">
    <head>
    <%- include("./partials/head.ejs") %>
    <style>
        body{
        background-image: url(/images/bg.jpeg);
        background-size: cover;
        }

        .regBox{
            border: 4px solid #000000f0;;
            background-color: black;
            /* margin: 2rem auto; */
            /* height: 78vh; */
            width: 70vh;
            padding: 1rem 2.1rem;
            border-radius: 1rem;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            margin: auto;
        }

        h1{
            text-align: center;
        }

        input{
            height: 6vh;
        }

        .btn{
            border-radius: 1rem;
            height: 5.5vh;
            font-weight: 500;
            font-size: 1.2rem;
        }

        .login{
            margin: 2vh 8vh;
        }

    </style>
    </head>
<body style=" font-family: cursive;">
    <%- include("./partials/nav.ejs") %>
    <main class="regBox">
        <h1 style="color: white;">Sign Up</h1>
        <form action="/user/signup" method="POST" onsubmit="return validateForm()">

            <div class="input-group mb-3">
                <input type="text" class="form-control"  type="text" name="name" placeholder="Enter your Name"  aria-describedby="basic-addon1" required>
            </div>

            <div class="input-group mb-3">
                <input type="text" class="form-control" type="email"  name="email" placeholder="Enter Your Email"  aria-describedby="basic-addon1" required >
            </div>
            
            <div class="input-group mb-3">
                <input  class="form-control" type="password" id="password" name="password" placeholder="Password"  aria-describedby="basic-addon1" required >
            </div>
            
            <div class="input-group mb-3">
                <input  class="form-control" type="password" id="confirmpassword" name="confirmpassword" placeholder="Confirm Password"  aria-describedby="basic-addon1" required>
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="checkbox" required style="background-color: #ffc107;">
                <label class="form-check-label" for="checkbox" style="color: white;">I agree to the <strong>Terms anf Conditions</strong> of User.</label>
            </div>

            <button type="submit" class="btn input-group btn-primary bg-warning">Register</button>
        </form>
        </main>
        <script>
            function validateForm() {
            let password = document.getElementById('password').value;
            let confirmpassword = document.getElementById('confirmpassword').value;

            if (password !== confirmpassword) {
                alert("Passwords do not match!");
                return false;
            }
            return true;
            }
            
        </script>

    <%- include("./partials/script.ejs") %>
</body>
</html>