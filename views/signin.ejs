<!DOCTYPE html>
<html lang="en">
    <head>
    <%- include("./partials/head.ejs") %>
    <style>
        body{
        background-image: url(/images/bg.jpeg);
        background-size: cover;
        }

        .regBox{
            border: 4px solid #1644c0f0;;
            background-color: white;
            border: 4px solid #000000f0;;
            background-color: black;
            width: 70vh;
            padding: 1rem 2.1rem;
            border-radius: 1rem;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            margin: auto;
            margin-top: 2rem;
        }

        h1{
            text-align: center;
        }

        input{
            height: 6vh;
        }

        .btn{
            border-radius: 1rem;
            height: 5.5vh;
            font-weight: 500;
            font-size: 1.2rem;
        }

        .login{
            margin: 2vh 8vh;
        }
        
        label{
            display: inline-block;
            font-size: 1.5rem;
            font-weight: 500;
            margin-bottom: 6px;
        }

        #forgetPass{
            margin-left: 38vh;
            font-size: 1rem;
            text-decoration: none;
            color: black;
        }

        #rememberMe{
            font-size: 1rem;
        }

        label{
            color: white;
        }
    </style>
    </head>
<body style=" font-family: cursive;">
    <%- include("./partials/nav.ejs") %>
    <main class="regBox">
        <h1 style=" color: white">Login</h1>
        <form action="/user/signin" method="POST">

            <label for="email" class="form-label">Email</label>
            <div class="input-group mb-3">
                <input type="text" class="form-control" id="email" type="email"  name="email" placeholder="Enter Your Email"  aria-describedby="basic-addon1" required>
            </div>
            
            <label for="password" class="form-label">Password</label>
            <div class="input-group mb-3">
                <input  class="form-control" type="password" id="password" name="password" placeholder="Enter Your Password"  aria-describedby="basic-addon1" required>
            </div>
            <a href="/user/forgetPassword" id="forgetPass" style="color: white;">Forget Password?</a><br>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="rememberMe" style="background-color: #ffc107;">
                <label class="form-check-label" id="rememberMe" for="rememberMe" style=" color: white">Remember me</label>
            </div>
            <button type="submit" class="btn input-group btn-primary bg-warning">Login</button>

        </form>
    </main>
    <%- include("./partials/script.ejs") %>
</body>
</html>